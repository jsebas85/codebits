{% extends 'ShopperShopBundle::layout.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}
    <article class="blog">
        <header>
            <div class="date"><time datetime="{{ product.created|date('c') }}">{{ product.created|date('l, F j, Y') }}</time></div>
            <h2>{{ product.title }}</h2>
        </header>
        <img src="{{ asset(['images/', product.image]|join) }}" alt="{{ product.title }} image not found" class="large" />
        <div>
            <p>{{ product.seller }}</p>
        </div>
    </article>
{% endblock %}